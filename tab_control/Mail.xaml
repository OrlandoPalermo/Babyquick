<UserControl x:Class="tab_control.Mail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">
    <StackPanel HorizontalAlignment="Center">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
            <Label Content="Pseudonyme :"></Label>
            <TextBox Name="Pseudo" Width="600"></TextBox>
            <Label Content="Babysitter" Foreground="White" Background="Black"></Label>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
            <Label Content="Sujet"></Label>
            <TextBox Name="Subject" Width="600"></TextBox>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
            <TextBox Height="500" Width="700" AcceptsReturn="True" ></TextBox>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10, 0, 0">
            <Button Name="SubmitMail" Content="Envoyer" Padding="10"></Button>
        </WrapPanel>
    </StackPanel>
</UserControl>
